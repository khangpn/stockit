form.form-horizontal(action=(!account || account.isNewRecord)
? '/accounts/create' : '/accounts/update', method='post')
  if (account && !account.isNewRecord)
    input.form-control(type='hidden',
      name='id',
      id='Customer_id',
      value=account.id)
  if (!account || account.isNewRecord)
    div.form-group
      label.col-sm-2.control-label(for='Account_email') Email
      div.col-sm-10
        input.form-control(type='text',
        name='email',
        id='Account_email',
        placeholder='Email')
    div.form-group
      label.col-sm-2.control-label(for='Account_password') Password
      div.col-sm-10
        input.form-control(type='password',
        name='account[password]',
        id='Account_password',
        placeholder='Password')
    div.form-group
      label.col-sm-2.control-label(for='Account_password_confirm') Confirm Password
      div.col-sm-10
        input.form-control(type='password',
        name='account[password_confirm]',
        id='Account_password_confirm',
        placeholder='Retype Password')
  div.form-group
    label.col-sm-2.control-label(for='Customer_fullname') Fullname
    div.col-sm-10
      input.form-control(type='text',
      name='fullname',
      id='Customer_fullname',
      placeholder='Fullname',
      value=customer ? customer.fullname : '')
  div.form-group
    label.col-sm-2.control-label(for='Customer_address') Address
    div.col-sm-10
      input.form-control(type='text',
      name='address',
      id='Customer_address',
      placeholder='Address',
      value=customer ? customer.address : '')
  div.form-group
    label.col-sm-2.control-label(for='Customer_phone') Phone
    div.col-sm-10
      input.form-control(type='text',
      name='phone',
      id='Customer_phone',
      placeholder='Phone',
      value=customer ? customer.phone : '')
  if isAdmin
    div.form-group
      label.col-sm-2.control-label(for='Customer_note') Note
      div.col-sm-10
        textarea.form-control(
          name='note',
          id='Customer_note',
          placeholder='Note'
        )
  div.form-group
    div.col-sm-offset-2.col-sm-10
      input.btn.btn-default(type='submit' value='Submit')
