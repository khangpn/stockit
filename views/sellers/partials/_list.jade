div.container
  include ../../_ng_error_list.jade
  div.row(ng-show="!$ctrl.error")
    div.col-md-10
      div.panel.panel-default
        div.panel-heading
          h3.panel-title Sellers List
        div.panel-body
          div.row
            label.col-sm-1.control-label(for='Seller_search') Search
            div.col-sm-3
              input(type='text',
                name='keyword',
                id='Seller_search',
                placeholder='keyword',
                ng-model="$ctrl.query")
          div.row
            label.col-sm-1.control-label(for='Seller_sort') Sort
            div.col-sm-3
              select(name='keyword',
                id='Seller_sort',
                ng-model="$ctrl.orderProp")

                option(value="default", disabled) Order By
                option(value="id") ID
                option(value="email") Email
                option(value="fullname") Fullname
                option(value="phone") Phone
                option(value="address") Address
                option(value="-id") Decending ID
                option(value="-email") Decending Email
                option(value="-fullname") Decending Fullname
                option(value="-phone") Decending Phone
                option(value="-address") Decending Address
          div.table-responsive
            table.table.table-hover
              thead
                tr
                  th ID
                  th Email
                  th Fullname
                  th Phone
                  th Address
              tbody
                tr(ng-repeat="seller in $ctrl.sellers | filter:$ctrl.query | orderBy:$ctrl.orderProp")
                  td 
                    a(href='#!/sellers/' + "{{seller.id}}") {{seller.id}}
                  td
                    a(href='#!/sellers/' + "{{seller.id}}") {{seller.email}}
                  td {{seller.fullname}}
                  td {{seller.phone}}
                  td {{seller.address}}
    div.col-md-2
      div.panel.panel-default
        div.panel-body
          div.row
            ul
              li
                a(href='#!/sellers/create') Create new seller
