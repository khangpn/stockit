div.panel.panel-default
  div(ng-if="$ctrl.order.details && $ctrl.order.details.length > 0")
    div.panel-heading
      h3.panel-title Details
    div.panel-body
      div.table-responsive
        table.table.table-hover
          thead
            tr
              th Code
              th Name
              th Price
              th Quantity
              th Total
          tbody
            tr(ng-repeat="detail in $ctrl.order.details")
              td
                a(href='/items/' + "{{detail.item.id}}") {{detail.item.code}}
              td {{detail.item.name}}
              td {{detail.price}}
              td {{detail.quantity}}
              td {{detail.quantity * detail.price}}
  div(ng-if="!$ctrl.order.details || $ctrl.order.details.length == 0")
    ="This order is empty"
